/* Foundation navbar overrides */
.nav-bar {
  margin-top: 0;
  margin-bottom: 0;
  > li > a {
    font-weight: bold;
  }
}

/* Inset list items */
ul {
  padding: 0 0 0 40px;
}

/* Body */
body {
  background-color: #f2f2f2;

  /* Masthead */
  > header {
    background: url(<%= asset_path 'calcentral_masthead_landing.png' %>);
    background-repeat: no-repeat;
    border: 1px solid #d3d8d8;
    border-top: none;
    cursor: pointer;
    margin: 0 auto;
    height: 90px;
    position: relative;

    > h1 {
      margin: 0;
      text-indent: 100%;
      overflow: hidden;
      white-space: nowrap;
    }
  }

  /* Footer */
  > footer {
    clear: both;
    font-size: 0.85em;
    margin: 0 auto;
    overflow: hidden;
    padding: 10px 10px 15px;
    width: 960px;

    a {
      float: right;
      font-weight: bold;
      padding-left: 21px;
    }
  }

}

/* Container */
.cc-container-main {
  background-color: #fff;
  padding: 0 10px;
}

/* Launcher */
.cc-launcher {
  padding: 0;
  position: absolute;
  right: -1px;
  top: 0;

  a {
    color: #15315c;
    font-weight: bold;
  }
  .cc-launcher-icons {
    border-right: 1px solid #114d80;
    padding: 1px 10px 3px 5px;
  }
  .cc-icon {
    margin: 2px 0 0 5px;
  }
  .cc-launcher-info {
    padding: 2px 10px;
  }
  .cc-launcher-icon-dropdown {
    font-size: 8px;
  }
  .cc-launcher-dropdown {
    display: none;
    position: absolute;
    right: -1px;
    z-index: 4;

    a {
      display: block;
      padding: 4px 10px;
      text-align: right;
    }
  }
}
.cc-launcher, .cc-launcher .cc-launcher-dropdown {
  background: #fff;
  border: 1px solid #114d80;
  border-bottom-left-radius: 6px;
  border-top: none;
}

