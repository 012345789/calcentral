}

.cc-widget-tasks-notifications-list {
  list-style-type: none;
  margin: 0;
  padding: 0 0 10px 0;

  li {
    margin-top: 10px;
  }
}

/* Image replacement */
.ir {
  *line-height: 0;
  background-color: transparent;
  background-repeat: no-repeat;
  border: 0;
  display: block;
  direction: ltr;
  overflow: hidden;
  text-align: left;
  text-indent: -999em;

  br {
    display: none;
  }
}
